    "font-awesome": "^4.7.0",
    "font-awesome-loader": "^1.0.2",
    "helmet": "^3.21.2",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "jimp": "^0.6.0",
    "mini-css-extract-plugin": "^0.7.0",

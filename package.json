  "license": "GPL-3.0",
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:modules": "rimraf node-modules package-lock.json",
    "build": "npm run clean && webpack --progress --config webpack.config.dev.js",
    "build:prod": "npm run clean && webpack --progress -p --env production --config webpack.config.prod.js",
    "start": "npm run build && webpack-dev-server --config webpack.config.dev.js",
    "start:prod": "npm run build:prod && webpack-dev-server -p --env production --config webpack.config.prod.js"
  },
  "browserslist": [
    "> .01%",
    "not dead",
    "last 3 Chrome versions",
    "last 3 Firefox versions",
    "last 3 Safari versions",
    "last 2 Edge versions",
    "last 1 version",
    "Firefox ESR",
    "not ie <= 11"
  ],
  "devDependencies": {
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "animate.css": "^3.7.2",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
